<!DOCTYPE php>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="description" content="ChampyLight service, DMX controller on the web.">
        <meta name="author" content="Louis Blin">

        <title>{% block title %}Welcome!{% endblock %}</title>

        {% block stylesheets %}

        <!-- Bootstrap Core CSS -->
        <link href="{{ asset('css/bootstrap.min.css') }}" rel="stylesheet">

        <!-- jQuery -->
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>

        <!-- Bootstrap-slider -->
        <link href="{{ asset('bootstrap-slider/css/bootstrap-slider.css') }}" rel="stylesheet">
        <script type='text/javascript' src="{{ asset('bootstrap-slider/bower_components/modernizr/modernizr.js') }}"></script>

        <!-- Custom CSS -->
        <link href="{{ asset('css/champylight.css') }}" rel="stylesheet">

        <!-- Custom Fonts -->
        <link href="{{ asset('fonts/font-awesome/css/font-awesome.min.css') }}" rel="stylesheet" type="text/css">
        <link href="http://fonts.googleapis.com/css?family=Lato:300,400,700,300italic,400italic,700italic" rel="stylesheet" type="text/css">

        {% endblock %}

        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />

        <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
        <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
        <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
        <![endif]-->
    </head>
    <body>

        {% block constants %}

            {% set INTENSITY_INDEX = 0 %}
            {% set RED_INDEX = 1 %}
            {% set GREEN_INDEX = 2 %}
            {% set BLUE_INDEX = 3 %}
            {% set WHITE_INDEX = 4 %}

            {% set CHUNCK_SIZE = 5 %}

            {% set TYPE_BW = DEL %}
            {% set TYPE_RGB = LED %}
        
        {% endblock %}

        {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}
    </body>
</html>
